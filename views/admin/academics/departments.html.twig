{% extends '../index.html.twig' %}
{% block title %}Departments{% endblock %}

{% block pageid %}department admin dashboard{% endblock %}

{% block main %}
<div class="listing">
  <div class="toolbar">
    <button type="button" class="btn btn-success btn-lg" data-toggle="modal" data-target="#departmentadd">
      Add department
    </button>
  </div>
  <div class="list-group">
    {% for department in departments %}
    <div class="list-group-item">
      <div class="row-content">
        <div class="actions action-secondary">
          <i class="material-icons">edit</i>
        </div>
        <h4 class="list-group-item-heading">
          <a href="departments/{{ department.slug }}">{{ department.name }}</a>
        </h4>
      </div>
    </div>
    {% endfor %}
  </div>
</div>

<!-- add user dialog -->
<div id="departmentadd" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Add department</h4>
      </div>
      <div class="modal-body">
        <form id="departmentform" method="POST">
          <div class="form-group label-floating">
              <label for="name" class="control-label">Name</label>
              <input type="text" class="form-control" id="name" name="name">
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button form="departmentform" value="Save" type="submit" class="btn btn-success">Save</button>
      </div>
    </div>

  </div>
</div>
{% endblock %}
